<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Iniciar Sesión</title>
</head>
<body>

  <div class="container ">
    <div class="row">
      <div class="col-7">
        <table class="table table-bordered table-hover">
          <thead>
            <tr>
              <td>N°</td>
              <td>Titulo Encuesta</td>
              <td>Pregunta</td>
              <td>Respuesta</td>
              <td>Opciones</td>
              <td>Resp. Correcta</td>
              <td>Actions</td>
            </tr>
          </thead>
          <tbody>
            <% if (data) { %>
              <% for(var i = 0; i < data.length; i++) { %>
                <tr>
                  <td><%= (i + 1) %></td>
                  <td><%= data[i].Titulo_encuesta %></td>
                  <td><%= data[i].Pregunta_encuesta %></td>
                  <td><%= data[i].Tipo_pregunta %></td>
                  <td><%= data[i].Opciones_pregunta %></td>
                  <td><%= data[i].Respuesta_Pregunta %></td>
                  <td>
                    <a href="/update/<%= data[i].idtb_encuesta %>" class="btn btn-info">Edit</a>
                    <a href="/delete/<%= data[i].idtb_encuesta %>" class="btn btn-danger">Delete</a>
                  </td>
                </tr>
              <% } %>
            <% } %>
          </tbody>
        </table>
      </div>

      <div class="col-5">
        <div class="card-body">
  
          <form action="/add" method="POST">
            <div class="form-group">
              <input type="text" name="Titulo_encuesta" placeholder="Nombre Encuesta" class="form-control" autofocus>
            </div>
            <div class="form-group">
              <input type="text" name="Pregunta_encuesta" placeholder="Pregunta" class="form-control">
            </div>
            <div class="form-group">
              <input type="text" name="Tipo_pregunta" placeholder="Respuesta: abierta,Sino,multiple." class="form-control">
            </div>
            <div class="form-group">
                <input type="text" name="Opciones_pregunta" placeholder="Opcion Multiple" class="form-control">
            </div>
            <div class="form-group" class="form-control">
                Formato: separado por comas (opc1,opc2,opc3). 
              </div>
            <div class="form-group">
              <input type="text" name="Respuesta_Pregunta" placeholder="Respuesta Correcta" class="form-control">
            </div>  
            </div>
  
            <button type="submit" class="btn btn-primary">
              Guardar preguntas
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>


</body>
</html>